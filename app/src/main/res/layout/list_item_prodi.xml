<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:padding="16dp"
        android:background="@drawable/border_left_card_5dp_black">

        <TextView
            android:id="@+id/text_nama_prodi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:text="Nama Prodi"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text_akreditasi_prodi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_nama_prodi"
            android:text="Akreditasi Prodi"
            android:textColor="#8b8b8b"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
